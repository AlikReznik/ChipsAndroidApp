<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/LinearLayout_UserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ImageView_UserImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            tools:src="@color/black" />

        <LinearLayout
            android:id="@+id/LinearLayout_UserInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginVertical="10dp"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/TextView_UserBio"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Bio"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <View
            android:id="@+id/Divider_Section1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/TextView_Recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommend!"
            android:layout_marginVertical="5dp"
            android:textSize="24dp" />

        <View
            android:id="@+id/Divider_SubSection3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TextView_Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:layout_marginVertical="5dp"
            android:textSize="24dp" />

        <View
            android:id="@+id/Divider_Section2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/TextView_ResetEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Reset Email"
            android:textSize="24dp" />

        <View
            android:id="@+id/Divider_SubSection4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TextView_ResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_marginVertical="5dp"
            android:textSize="24dp" />

        <View
            android:id="@+id/Divider_SubSection5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TextView_PermissionSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Permission Settings"
            android:textSize="24dp" />

        <View
            android:id="@+id/Divider_SubSection6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TextView_LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Log Out"
            android:textSize="24dp" />

        <!--<View
            android:id="@+id/Divider_SubSection7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TextView_DeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Delete Account"
            android:textSize="24dp" />-->

    </LinearLayout>

</LinearLayout>
